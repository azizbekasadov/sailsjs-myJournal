<html>
    <style>
        .post-container {
            background-color: white;
            margin: 16px;
            padding: 16px;
            border-radius: 5px;
            border: solid 1px rbg(199, 199, 199);
        }
    </style>

    <script src='https://unpkg.com/axios/dist/axios.min.js'></script>

    <script>
        async function handleDeletePost(event) {
            console.log(event.target.id)

            const postId = event.target.id
            const url = '/post/' + postId
            
            try {
                const response = await axios.delete(url)
                console.log(response);
            } catch (error) {
                console.log(error.toString())
                alert(error.toString())
            }

            location.reload()
        }
    </script>

    <body style='background-color: rgb(235, 235, 235)'>
        This will be a home page for the website;

        <form class='post-container' action="/post" method="POST">
            <div>Create post</div>
            <input name='title' type="text" placeholder="Post Title">
            <input name='postBody' type="text" placeholder="Post Body">
            <button type='sumbit'>Submit</button>
        </form>

        <div>
            <% allPosts.forEach(p => { %>
                <div class='post-container'>
                    <div><%= p.title%></div>
                    <div><%= p.body%></div>
                    <button id='<%= p.id %>' onClick='handleDeletePost(event)'>Delete</button>
                </div>
            <%})%>
            
        </div>
    </body>
</html>